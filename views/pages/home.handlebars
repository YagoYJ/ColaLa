<main>
    <div class="container">
        <h2>Modalidades mais pesquisadas:</h2>
        <div class="modality">
            <div class="card">
                <img src="/assets/img_cardSoccer.svg" alt="Futebol">
                <p>Futebol</p>
            </div>
            <div class="card">
                <img src="/assets/img_cardRun.svg" alt="Corrida">
                <p>Corrida</p>
            </div>
            <div class="card">
                <img src="/assets/img_cardSkate.svg" alt="Skate">
                <p>Skate</p>
            </div>
            <div class="card">
                <img src="/assets/img_cardBasket.svg" alt="Basquete">
                <p>Basquete</p>
            </div>
        </div>
        <a href="/new-modality" class="button"><i class="fa fa-eye"></i> Ver mais</a>

        <h2>Eventos mais famosos:</h2>
        <div class="event">
        {{#each event}}
            <div class="card">
                <div class="header">

                    <div class="profile">
                        <img src="{{user.avatar}}" alt="{{user.nickname}}">
                        <span>{{user.nickname}}</span>
                    </div>
                    <button class=" button">Detalhes</button>
                </div>
                <div class="thumbnail">
                    <img src="{{thumbnail}}" alt="{{title}}">
                </div>
                <div class="description">

                    <h3>{{title}}</h3>
                    <span><i class="fa fa-users"></i> {{members}} pessoas confirmadas</span><br>
                    <span><i class="fa fa-map-marker"></i> {{address}}</span><br>
                    <span><i class="fa fa-calendar"></i> {{date}} Ã s {{hour}}</span>
                </div>
                <div class="buttonGroup">
                    <button class="participate"><i class="fa fa-user-plus"></i> Participar</button>
                    <button class="share"><i class="fa fa-share-alt"></i> Compartilhar</button>
                </div>
            </div>
            {{/each}}
        </div>
        <a href="#" class="button"><i class="fa fa-eye"></i> Ver mais</a>
    </div>
</main>